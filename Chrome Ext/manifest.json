{
  "manifest_version": 3,
  "name": "Panopto Caption Extractor",
  "version": "1.0",
  "description": "Extracts captions from a Panopto video on button click.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "*://*.panopto.com/*",
    "*://*.panopto.eu/*",
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}